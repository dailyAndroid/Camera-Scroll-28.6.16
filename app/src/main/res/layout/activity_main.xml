<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="warrenhong.camerascroll.MainActivity"
    android:fillViewport="false">

    <GridLayout
        android:layout_height="900dp"
        android:layout_width="match_parent">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="412dp"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:background="@drawable/twitter"/>

        <Button
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/tumblr"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:id="@+id/button4"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/uber"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/beme"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:id="@+id/imageView"
            android:layout_row="6"
            android:layout_column="1"
            android:background="@drawable/airbnb"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_row="7"
            android:layout_column="1"
            android:background="@drawable/visa"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:id="@+id/imageView4"
            android:layout_row="8"
            android:layout_column="1"
            android:background="@drawable/nyt"/>

    </GridLayout>
</ScrollView>
